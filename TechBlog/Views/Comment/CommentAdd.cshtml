

<div class="custombox clearfix">
    <h4 class="small-title">Leave a Reply</h4>
    <div class="row">
        <div class="col-lg-12">
            <form method="post" id="concatcForm" class="form-wrapper">

                <textarea class="form-control" name="Message"
                          placeholder="Your comment" id="txt" required></textarea>

                <button type="submit" id="btn" onclick="submitContact()"
                        class="btn btn-primary">
                    Submit Comment
                </button>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    function submitContact() {
        var data = $("#concatcForm").serialize();
        var id = @ViewBag.Id;
        $.ajax({
            type: 'POST',
            url: '/Comment/CommentAdd/'+id,
            data: data,
            success: function (result) {
                console.log(result);
            },
            error: function () {

                console.log('Failed');
            }
        })
    }
</script>
