@model IEnumerable<Comment>

<div class="custombox clearfix">
    <h4 class="small-title">@ViewBag.CommentCount Comments</h4>
    <div class="row">
        <div class="col-lg-12">
            <div class="comments-list">
                @if (Model.Count() > 0)
                {
                @foreach (var item in Model)
                {
                    <div class="media">
                        <a class="media-left" href="#">
                            <img src="upload/author.jpg" alt="" class="rounded-circle">
                        </a>
                        <div class="media-body">
                            <h4 class="media-heading user_name">@item.Writer.Name </h4>
                            <p>
                                @item.Message
                            </p>
                        </div>
                    </div>

                    }

                }
                else
                {
                    <div class="media">
                        <p>
                            No comments yet,be first
                        </p>
                    </div>
                }

            </div>
        </div><!-- end col -->
    </div><!-- end row -->
</div>