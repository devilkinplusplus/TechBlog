    <div class="col-md-6 widget widget1">
        <div class="r3_counter_box">
            <i class="pull-left fa fa-dollar icon-rounded"></i>
            <div class="stats">
                <h5><strong>@ViewBag.commentPerBlog units</strong></h5>
                <span>Comments</span>
            </div>
        </div>
    </div>

    <div class="col-md-6 widget widget1">
        <div class="r3_counter_box">
            <i class="pull-left fa fa-laptop user1 icon-rounded"></i>
            <div class="stats">
                <h5><strong>@ViewBag.totalBlogs units</strong></h5>
                <span>Blogs</span>
            </div>
        </div>
    </div>
    <div class="col-md-6 widget widget1">
        <div class="r3_counter_box">
            <i class="pull-left fa fa-money user2 icon-rounded"></i>
            <div class="stats">
                <h5><strong>@ViewBag.topCategory</strong></h5>
                <span>Most Used Category</span>
            </div>
        </div>
    </div>
    <div class="col-md-6 widget widget1">
        <div class="r3_counter_box">
            <i class="pull-left fa fa-pie-chart dollar1 icon-rounded"></i>
