@model Writer

<div class=" form-grids row form-grids-right">
    <div class="widget-shadow " data-example-id="basic-forms">
        <div class="form-title">
            <h4>Update profile:</h4>
        </div>
        <div class="form-body">
            <form method="post" class="form-horizontal" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="Name"
                               id="inputEmail3" placeholder="Name"
                               value="@Model.Name">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-9">
                        <input type="email" class="form-control" name="Email"
                               id="inputEmail3" placeholder="Email"
                               value="@Model.Email">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Description</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="Description"
                               id="inputEmail3" placeholder="Description"
                               value="@Model.Description">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Upload</label>
                    <div class="col-sm-9">
                        <div class="blog_info_left_grid">
                            <img src="/writerImages/@ViewData["img"]"
                                 height=100 width=100 class="img-fluid img-circle" alt="photo.url">
                        </div>
                        <input type="file" class="form-control" asp-for="@Model.PhotoUrl"
                               id="inputEmail3" name="PhotoUrl"
                               value="/writerImages/@ViewData["img"]" />
                    </div>

                </div>

                <div class="col-sm-offset-2">
                    <button type="submit" class="btn btn-success">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>
